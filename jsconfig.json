{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/api/*": ["api/*"],
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/functions/*": ["functions/*"],
      "@/config/*": ["config/*"],
      "@/hoc/*": ["hoc/*"],
      "@/hooks/*": ["hooks/*"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"],
      "@/styles/*": ["styles/*"]
    }
  },
  "exclude": ["node_modules", ".next"]
}
